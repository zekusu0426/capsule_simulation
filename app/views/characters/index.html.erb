<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<div class="row">
  <div class="col-md-2 offset-md-1">First name</div>
  <div class="col-md-2 ">First name kana</div>
  <div class="col-md-2 ">Last name</div>
  <div class="col-md-2 ">Last name kana</div>
  <div class="col-md-2 ">Band_Name</div>
</div>

<% @div_row_start = 0 %>
<% @div_row_end = 0 %>

<div class="row">
  <% @characters.each do |character| %>
    <div class="col-md-2 card">
      <img class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%#= character.first_name + character.last_name %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  <% end %>
</div>


<br>
<%= link_to 'New Character', new_character_path %>
