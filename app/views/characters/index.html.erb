<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>First name kana</th>
      <th>Last name</th>
      <th>Last name kana</th>
      <th>Band_Name</th>
      <th>Introduction</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.first_name %></td>
        <td><%= character.first_name_kana %></td>
        <td><%= character.last_name %></td>
        <td><%= character.last_name_kana %></td>
        <td><%= character.band.name %></td>
        <td><%= character.introduction %></td>
        <td><%#= link_to 'Show', character %></td>
        <td><%#= link_to 'Edit', edit_character_path(character) %></td>
        <td><%#= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

